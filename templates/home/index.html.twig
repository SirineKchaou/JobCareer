		</section>
<main class="main">

		
		<section class="job-listings">
			<h2>Offres d'emploi récentes</h2>
			{% for offre in offres %}
			<ul class="job-list">
			<table><tr><td>
				<li class="job">
					<div class="job-image">  <img src="{{ asset('uploads/photos/') ~ offre.photo }}"  alt="Offre d'emploi 1"></div>
					<div class="job-details">
						<h3>{{ offre.nom }}</h3>
						<p>{{ offre.description }}</p>
						<a href="{{path('app_contact')}}" class="btn">Postuler maintenant</a>
					</div>
				</li></td>
			</ul>
			</tr>
			</table>
			{% endfor %}
		</section>
	</main>

{% endblock %}
