{% extends 'index.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
		<section >
		<div class="carousel">
  <div class="carousel-container">
    <img src="image/carousel1.jpg" alt="Image 1">
    <img src="image/carousel2.jpg" alt="Image 2">
    <img src="image/carousel3.jpg" alt="Image 3">
    <img src="image/carousel4.jpg" alt="Image 4">
